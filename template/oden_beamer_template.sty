\mode<presentation> {
    \definecolor{oden_blue}{RGB}{0, 169, 183}
    \definecolor{burnt_orange}{RGB}{192, 81, 27}
    \definecolor{accent_orange}{RGB}{236, 138, 63}
    \definecolor{charcoal}{RGB}{51, 63, 72}
    \usetheme{Boadilla}
    \setbeamertemplate{navigation symbols}{}
    \setbeamertemplate{mini frames}{}
    \setbeamertemplate{section in head/foot}{}
    \setbeamercovered{transparent=0}
    \setbeamercolor{structure}{bg=burnt_orange,fg=burnt_orange}
    \setbeamercolor{normal text}{bg=white,fg=charcoal} % fg=charcoal
    \setbeamercolor{block title}{bg=burnt_orange,fg=white}
    \setbeamercolor{block body}{bg=burnt_orange!10,fg=black} % fg=charcoal
    \setbeamercolor{title in head/foot}{bg=accent_orange,fg=white}
    \setbeamercolor{author in head/foot}{bg=burnt_orange,fg=white}
    \setbeamercolor{frametitle}{fg=burnt_orange}
    \setbeamercolor{title}{fg=burnt_orange}
    \setbeamertemplate{footline}
    {
        \leavevmode
        \ifnum \insertpagenumber=1  % Footer for the title slide.
            \begin{beamercolorbox}[wd=.565\paperwidth,ht=3.3em,dp=1ex,left]{author in head/foot}
            \end{beamercolorbox}%
            \begin{beamercolorbox}[wd=.1\paperwidth,ht=3.3em,dp=1ex,left]{title in head/foot}
            \end{beamercolorbox}\hspace{.01\paperwidth}
            \begin{beamercolorbox}[wd=.3\paperwidth,right]{white}
                \center
                \includegraphics[width=.3\paperwidth]{RGB_formal_Oden_ICES.png}
            \end{beamercolorbox}
        \else                       % Footer for non-title slides.
            \hspace{-.01\paperwidth}
            \hbox{
                \begin{beamercolorbox}[wd=.925\paperwidth,ht=2.25ex,dp=1ex,left]{author in head/foot}
                \end{beamercolorbox}%
                \begin{beamercolorbox}[wd=.075\paperwidth,ht=2.25ex,dp=1ex,right]{title in head/foot}
                    \usebeamerfont{title in head/foot}
                    \center
                    \insertframenumber/\inserttotalframenumber
                \end{beamercolorbox}
            }
        \vskip 0pt
        \fi
    }
}
